$("ul.errors").html("")
<% if @item.errors.any? %>
  <% @item.errors.full_messages.each do |message| %>
    $("ul.errors").append($("<li />").html("<%= message.html_safe %>"))
  <% end %>
<% else %>
  $('.loading').hide();
  $("#items").html("<%= j (render 'items') %>")
  $("#item-modal").modal("hide")
<% end %>

