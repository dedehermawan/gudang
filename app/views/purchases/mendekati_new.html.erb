<h2>Add Purchase</h2>
<%= form_for @purchase, html: {styles: "display:inline;"} do |f| %>
  <div class="form-group col-sm-2">
    <%= f.label "coa", class: 'control-label' %>
    <%= f.select(:coa_id,options_for_select(@coas.collect{ |coa| [coa.coa_name, coa.id]}, [@purchase.coa_id]), {prompt: '-- Select -- '}, {class: 'form-control'}) %>
  </div>
  <div class="form-group col-sm-2">
    <%= f.label "Purchase id", class: 'control-label' %>
    <%= f.text_field :purchase_id, :value => 'M001', class: 'form-control' , id: ''%>
  </div>
  <div class="form-group col-sm-2">
    <%= f.label "Tanggal Dokumen", class: 'control-label' %>
    <%= f.text_field :document_date, :value => '', class: 'form-control datetimepicker' , id: ''%>
  </div>
  <div class="form-group col-sm-2">
    <%= f.label "Tanggal Pemakaian", class: 'control-label' %>
    <%= f.text_field :use_date, :value => '', class: 'form-control datetimepicker' , id: ''%>
  </div>
  <div>
    <%= f.fields_for :purchase_details do |ff| %>
      <%= ff.text_field :qty_purchase %>
    <% end %>
  </div>
  <%= f.submit 'simpan' %>
<% end %>

<script type="text/javascript">
$(function () {
  $('.datetimepicker').datetimepicker();
});
</script>
