<%= form_for @supplier, remote: true, html: {styles: "display:inline;"} do |f| %>
  <div class="modal-body">
    <ul class="errors"></ul>
    <div class="form-group">
      <%= f.label :supplier_name, class: 'control-label' %>
      <%= f.text_field :supplier_name, class: 'form-control first-input' %>
    </div>
  </div>

  <div class="modal-footer">
    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
    <button type="submit" class="btn btn-primary"><%= yield(:button_text) %></button>
  </div>
<% end %>
