<h2>Add Purchase</h2>
<%= form_for @purchase, html: {styles: "display:inline;"} do |f| %>
  <div class="form-group">
    <%= f.label "coa", class: 'control-label' %>
    <%= f.select(:coa_id, options_for_select([
      ['Electric', 1],
      ['Machine', 2], 
      ['Utility', 3],
      ['Workshop', 4]
    ], [@purchase.coa_id]),{prompt: '-- Select --'},{class: 'form-control'})  %>
</div>
<% end %>
